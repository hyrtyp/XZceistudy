<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottoms_Ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/bottoms_parent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/phone_study_color1"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/phone_study_notice_tv"
            style="@style/phone_study_bottom_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/my_notice"
            android:gravity="center"
            android:text="通知公告" />

        <TextView
            android:id="@+id/phone_study_self_tv"
            style="@style/phone_study_bottom_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/my_class"
            android:gravity="center"
            android:text="我的课程" />

        <TextView
            android:id="@+id/phone_study_down_tv"
            style="@style/phone_study_bottom_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/my_down"
            android:gravity="center"
            android:text="我的下载" />


        <TextView
            android:id="@+id/phone_study_kind_tv"
            style="@style/phone_study_bottom_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/my_center"
            android:gravity="center"
            android:text="课程中心" />

        <TextView
            android:id="@+id/phone_study_mymore_tv"
            style="@style/phone_study_bottom_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/my_record"
            android:gravity="center"
            android:text="学习记录" />

        />
    </LinearLayout>


</LinearLayout>